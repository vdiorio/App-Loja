{
  "name": "app-loja",
  "version": "1.0.0",
  "description": "Aplicação de loja virtual com controle de acesso",
  "main": "./build/src/index.js",
  "scripts": {
    "start": "npm run tsc && npm run db:reset && node .",
    "tsc": "./node_modules/typescript/bin/tsc",
    "dev": "npx nodemon ./src/index.ts",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test/**/*.ts' --exit",
    "test:coverage": "nyc npm test",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all"
  },
  "author": "Vitor Martins Diorio",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "node": "^17.7.2",
    "nodemon": "^2.0.16",
    "sequelize": "^6.19.0",
    "sequelize-cli-typescript": "^3.2.0-c"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.3.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.1",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "jest": "^28.1.0",
    "mocha": "^10.0.0",
    "sequelize-cli": "^6.4.1",
    "sinon": "^14.0.0",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
